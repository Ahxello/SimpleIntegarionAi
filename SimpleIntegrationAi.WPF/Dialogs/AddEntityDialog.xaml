<Window x:Class="SimpleIntegrationAi.WPF.Dialogs.AddEntityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleIntegrationAi.WPF.Dialogs"
        mc:Ignorable="d"
        Title="AddEntityDialog" Height="100" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Text="{Binding EntityName, UpdateSourceTrigger=PropertyChanged}" Width="200" />
            <Button Content="OK" Command="{Binding ConfirmCommand}" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
