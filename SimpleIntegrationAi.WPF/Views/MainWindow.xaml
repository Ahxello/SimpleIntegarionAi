<Window x:Class="SimpleIntegrationAi.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleIntegrationAi.WPF"
        xmlns:controls="clr-namespace:SimpleIntegrationAi.WPF.Controls" 
        xmlns:viewmodel="clr-namespace:SimpleIntegrationAi.WPF.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="50px"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="3">
            <MenuItem Header="Load File" Command="{Binding LoadFileCommand}"></MenuItem>
            <MenuItem Header="Ai Query">
                <MenuItem Header="Load File response" Command="{Binding LoadApiResponseCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Add RItem NWork" Command="{Binding AddRelatedEntityCommand}"></MenuItem>
        </Menu>
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <Button  Content="›"   Command="{Binding MoveSelectedEntityCommand}" Width="30" Height="20"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            <Button  Content="»" Command="{Binding MoveAllEntitiesCommand}" Width="30" Height="20"/>
        </StackPanel>


    </Grid>
</Window>
