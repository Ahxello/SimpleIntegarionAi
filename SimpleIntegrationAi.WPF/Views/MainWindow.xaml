<Window x:Class="SimpleIntegrationAi.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleIntegrationAi.WPF"
        xmlns:controls="clr-namespace:SimpleIntegrationAi.WPF.Controls" 
        xmlns:viewmodel="clr-namespace:SimpleIntegrationAi.WPF.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Load File" Command="{Binding LoadFileCommand}"></MenuItem>
            <MenuItem Header="Ai Query">
                <MenuItem Header="Add related entities" Command="{Binding AddRelatedEntitiesCommand }"></MenuItem>
                <MenuItem Header="Add Properties" Command="{Binding AddPropetiesForMessageCollectionAsyncCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Add Item" Command="{Binding AddEntityCommand}"></MenuItem>
        </Menu>
        <ListBox Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedEntity }">
           <ListBox.ItemTemplate>
               <DataTemplate>
                    <TextBlock Text="{Binding Message}" />
               </DataTemplate>
           </ListBox.ItemTemplate>
           <ListBox.ContextMenu>
               <ContextMenu>
                   <MenuItem Header="Delete Entity" Command="{Binding DeleteEntityCommand}"></MenuItem>
               </ContextMenu>
           </ListBox.ContextMenu>

        </ListBox>

        <StatusBar Grid.Row="2">
            <StatusBarItem Content="Version 0.0.1"></StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
