<Window x:Class="SimpleIntegrationAi.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleIntegrationAi.WPF"
        xmlns:controls="clr-namespace:SimpleIntegrationAi.WPF.Controls" 
        xmlns:viewmodel="clr-namespace:SimpleIntegrationAi.WPF.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="3">
            <MenuItem Header="Load File" Command="{Binding LoadFileCommand}"></MenuItem>
            <MenuItem Header="Ai Query">
                <MenuItem Header="Load File response" Command="{Binding LoadApiResponseCommand}"></MenuItem>
            </MenuItem>
            <MenuItem Header="Add RItem NWork" Command="{Binding AddRelatedEntityCommand}"></MenuItem>
        </Menu>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="10">
            <ComboBox ItemsSource="{Binding Tables}" SelectedItem="{Binding SelectedTable}" Width="200" Margin="0,0,0,10"/>
            <Button Content="Load Tables" Command="{Binding LoadTablesCommand}" Width="100" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding NewTableName}" Width="200" Margin="0,0,10,0"/>
                <Button Content="Rename Table" Command="{Binding RenameTableCommand}" Width="100"/>
            </StackPanel>

            <ComboBox ItemsSource="{Binding Fields}" SelectedItem="{Binding SelectedField}" Width="200" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding NewFieldName}" Width="200" Margin="0,0,10,0"/>
                <Button Content="Rename Field" Command="{Binding RenameFieldCommand}" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding NewFieldName}" Width="200" Margin="0,0,10,0"/>
                <ComboBox ItemsSource="{Binding FieldTypes}" SelectedItem="{Binding NewFieldType}" Width="200" Margin="0,0,10,0"/>
                <Button Content="Add Field" Command="{Binding AddFieldCommand}" Width="100"/>
            </StackPanel>

            <Button Content="Load Data" Command="{Binding LoadDataCommand}" Width="100" Margin="0,0,0,10"/>

            <DataGrid ItemsSource="{Binding Data}" AutoGenerateColumns="True" AutoGeneratingColumn="OnAutoGeneratingColumn" Height="200"/>
        </StackPanel>


    </Grid>
</Window>
